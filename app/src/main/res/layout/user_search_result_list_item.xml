<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

    <FrameLayout
        android:id="@+id/user_result_prof_pic_cont"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <com.denovo.denovo.views.CustomTextView
            android:id="@+id/user_result_prof_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_red"
            android:gravity="center"
            android:text="AK"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>
    </FrameLayout>

    <com.denovo.denovo.views.BoldTextView
        android:id="@+id/search_result_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abhinav Khushalani"
        android:textSize="26sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_result_prof_pic_cont"/>

</RelativeLayout>