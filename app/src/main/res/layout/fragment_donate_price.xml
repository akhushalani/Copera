<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.denovo.denovo.fragments.DonatePriceFragment">

    <com.denovo.denovo.views.CustomEditText
        android:id="@+id/item_price_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@android:color/tab_indicator_text"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:layout_centerInParent="true"
        android:background="@drawable/myedittextsmall_selector"/>

    <com.denovo.denovo.views.CustomButton
        android:id="@+id/btn_confirm_price"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybuttonsmall"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>
</RelativeLayout>
