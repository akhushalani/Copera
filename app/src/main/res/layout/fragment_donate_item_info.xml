<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/donate_item_info_fragment"
              tools:context="com.denovo.denovo.fragments.DonateItemInfoFragment">

    <RelativeLayout
        android:id="@+id/item_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:padding="31dp"
            android:src="@drawable/ic_camera"/>

        <ImageView
            android:id="@+id/thumbnail_frame"
            android:src="@drawable/image_thumbnail_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <com.denovo.denovo.views.CustomEditText
        android:id="@+id/item_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@android:color/tab_indicator_text"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:background="@drawable/myedittextsmall_selector"/>

    <com.denovo.denovo.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:drawableEnd="@drawable/ic_search"
        android:text="Chapter"
        android:textSize="19sp"
        android:gravity="center_vertical"
        android:background="@drawable/myedittextsmall_selector"
        android:id="@+id/item_yard_sale_edit_text"/>

    <com.denovo.denovo.views.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:gravity="start"
        android:textColorHint="@android:color/tab_indicator_text"
        android:hint="Description"
        android:background="@drawable/myedittextsmall_selector"
        android:id="@+id/item_description_edit_text"/>

    <com.denovo.denovo.views.CustomButton
        android:id="@+id/btn_confirm_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybuttonsmall"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="22sp"/>

</LinearLayout>
